<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:src="@drawable/personal_head"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="张三宝-java-软件工程师"
            android:textSize="18sp"
            android:id="@+id/tv_name"
            android:singleLine="true"
            android:textColor="@color/dark_orgen"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拥有6年的软件开发经验，擅长java开发，Android软件开发与设计，曾在某大型上市"
            android:textSize="14sp"
            android:ellipsize="end"
            android:lines="2"
            android:layout_marginTop="2dp"
            android:id="@+id/tv_des"
            android:layout_below="@+id/tv_name"
            android:textColor="@color/text_normal_gray"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/orgen"
            android:text="期望薪资:  12000-20000元/月"
            android:singleLine="true"
            android:layout_below="@+id/tv_des"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="置顶"
            android:gravity="center"
            android:id="@+id/tv_fiter1"
            android:textColor="@color/red"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高级"
            android:layout_below="@+id/tv_fiter1"
            android:layout_marginTop="2dp"
            android:textColor="@color/blue"
            android:background="@drawable/boder"
            android:layout_centerHorizontal="true"
            />

    </LinearLayout>
</LinearLayout>