<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whlite"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/personal_head" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_username"
                    style="@style/AppTheme.Editstyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:layout_weight="1"
                    android:hint="姓名"
                    android:textSize="@dimen/text_normal_size"
                    app:met_floatingLabel="highlight"

                    />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/company_user_rab"
                        style="@style/AppTheme.TextNoraml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"

                        />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/person_user_rab"
                        style="@style/AppTheme.TextNoraml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="女" />

                </RadioGroup>

            </LinearLayout>


            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/AppTheme.Editstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="出生年月"
                android:textSize="@dimen/text_normal_size"
                app:met_floatingLabel="highlight"

                />

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/AppTheme.Editstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="最高学历"
                android:textSize="@dimen/text_normal_size"
                app:met_floatingLabel="highlight"

                />

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/AppTheme.Editstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="工作经验"
                android:textSize="@dimen/text_normal_size"
                app:met_floatingLabel="highlight" />
            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/AppTheme.Editstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="手机号码"
                app:met_maxCharacters="11"
                android:phoneNumber="true"
                android:textSize="@dimen/text_normal_size"
                app:met_floatingLabel="highlight" />
            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/AppTheme.Editstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="期望薪资"
                android:numeric="decimal"
                android:textSize="@dimen/text_normal_size"
                app:met_floatingLabel="highlight" />
            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/AppTheme.Editstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="期望职位"
                android:textSize="@dimen/text_normal_size"
                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/AppTheme.Editstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:singleLine="false"
                android:hint="自我评价"
                android:lines="3"
                android:textSize="@dimen/text_normal_size"
                app:met_floatingLabel="highlight" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/smssdk_btn_enable"
                android:textColor="@color/whlite"
                android:textSize="@dimen/text_normal_size"
                android:text="创建简历"
                android:layout_margin="@dimen/activity_horizontal_margin"
                />

        </LinearLayout>


    </ScrollView>


</LinearLayout>