<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:gravity="center_vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">
  <ImageView
    android:layout_width="140dp" android:id="@+id/list_img"
      android:visibility="gone"
    android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:id="@+id/tv_title"
            android:textSize="20sp"
            android:text="上市公司高薪招聘销售，有能力就来，无需工作经验"
            android:ellipsize="end"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:id="@+id/tv_des"
              android:layout_marginTop="5dp"
              android:layout_below="@+id/tv_title"
              android:textSize="16sp"
              android:text="重庆市 - 南岸区 - 北京子午经纬科技有限公司重庆分"
              />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_des"
            android:textColor="#ffd56e12"
            android:text="2000-12000元/月"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="精准"
            android:gravity="center"
            android:id="@+id/tv_fiter1"
            android:textColor="@color/red"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名企"
            android:layout_below="@+id/tv_fiter1"
            android:layout_marginTop="5dp"
            android:textColor="@color/blue"
            android:background="@drawable/boder"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</LinearLayout>